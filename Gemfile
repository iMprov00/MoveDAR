source 'https://rubygems.org'

# Основные гемы
gem 'sinatra'
gem 'sinatra-activerecord'
gem 'sqlite3'

# Для работы с Excel
gem 'caxlsx'
gem 'roo'
gem 'roo-xls'

# Для разработки
group :development do
  gem 'rerun' # Автоматическая перезагрузка сервера при изменениях
  gem 'pry'   # Интерактивная консоль для отладки
end